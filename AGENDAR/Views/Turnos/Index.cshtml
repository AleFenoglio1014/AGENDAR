        $(window).resize(function () {
            var widthBrowser = $(window).height();
            var heightBrowser = $(window).width();
            /*console.log("Tamaño de la pantalla del navegador: width=" + widthBrowser + " height=" + heightBrowser);*/
        });
    </script>
}
