@model IEnumerable<AGENDAR.Models.Turno>

@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<style>

    .navbar-light .navbar-nav .nav-link {
        color: rgba(0,0,0,.5) !important;
        font-weight:bold;
    }
    a {
        color: black !important;
        font-weight: bolder;
    }
    h2 {
        color: black !important;
       
    }
    #calendar {
        max-width: 1100px;
        max-height: 500px;
        margin: 0 auto;
        
    }
    .inputTurno{
        padding-left:0px;
    }
    .fc-daygrid-event-dot {
        border: 4px solid #FFFF00 !important;
        border: calc(var(--fc-daygrid-event-dot-width, 8px) / 2) solid var(--fc-event-border-color, #FFFF00 ) !important;
    }
    .inputProfesionalesfiltro {
        font-size: 11px !important;
        background-color: #2C3E50 !important;
        color: white !important;
    }
    .fc .fc-daygrid-more-link {
        color: black !important;
    }
    .aceptarBoton {
        padding-left: 90px;
    }
    .modalAceptar {
        
       
    }
    .fc-event-title {
        font-size: 11px;
    }

    .fc-event-time {
        font-size: 10px;
    }
    .modal-title{
        padding-left:160px;
    }
</style>
<body>

    <div class="form-group text-center inputTurno  col-md-4 col-sm-4 col-xl-4">
        @Html.DropDownList("ProfesionalIDFiltro", null, htmlAttributes: new { @class = "form-control inputProfesionalesfiltro " })
    </div>

    <div id='calendar'></div>
    <!-- Modal -->
    <div class="modal fade " id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content modalAceptar ">
                <div class="modal-header">
                    <h5 class="modal-title">Estado del Turno:</h5>
                    <button type="button" class="close cerrarModal" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <!--Agregado de Formulario dentro del Modal-->
                <div class="modal-body">
                    <form>
                        <input type="hidden" id="TurnoID" value="0" />
                      

                        <div class="form-group aceptarBoton">

                            <button type="button" onclick="EstadoTurno()" value="2" class="btn btn-outline-success "> Aceptar </button>
                            <button type="button" onclick="EstadoTurno()" value="0" class="btn btn-outline-dark"> Cancelar</button>
                            <button type="button" onclick="EstadoTurno()" value="3" class="btn btn-outline-danger "> Finalizar </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</body>

@section Scripts {

    <script src="~/js/main.js"></script>
    <script src="~/js/es.js"></script>

    
<script>
    window.onload = CargaElementos();
</script>
}

<link href="~/css/main.css" rel="stylesheet" />