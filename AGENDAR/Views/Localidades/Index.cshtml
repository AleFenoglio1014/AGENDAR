@model IEnumerable<AGENDAR.Models.Localidad>

@{
    ViewData["Title"] = "Localidades";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card shadow">
    <div class="card-body">

        <div class="d-flex justify-content-between align-items-center"><h2>Localidades</h2><button class="btn btn-success" onclick="AbrirModal()"><i class="fa-solid fa-plus"></i></button></div>
        <hr>

        <div style="height:60vh; overflow: auto">
            <table id="t-veterinario-lis" class="table table-striped table-bordered ">
                <thead class="table-dark">
                    <tr>
                <th class="text-center" style="width:100px">
                    Localidad
                </th>
                <th class="text-center ocultar767" style="width:90px">
                    Codigo Postal
                </th>
                <th class="text-center" style="width:90px">
                    Provincia
                </th>
                <th class="text-center" style="width:150px">
                    Opciones
                </th>
            </tr>
                </thead>
                <tbody id="tbody-localidades">
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titulo-Modal-Localidades"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" onclick="VaciarFormulario()" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" id="LocalidadID" value="0" />

                    <div class="form-group mb-3">
                        <label class="control-label" for="LocalidadNombre">Nombre </label>
                        <input type="text" class="form-control  " id="LocalidadNombre" autocomplete="off" maxlength="30" onkeyup="this.value = this.value.toUpperCase()" required />
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label" for="CodPostal">Codigo Postal </label>
                        <input type="number" class="form-control  " id="CodPostal" autocomplete="off" maxlength="4" onkeyup="this.value = this.value.toUpperCase()" required />
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label font-weight-bold">Provincia</label>
                        @Html.DropDownList("ProvinciaID", null, htmlAttributes: new { @class = "form-control" })
                        <p class="text-danger font-weight-bold" style="font-size:small" id="Error-ProvinciaNombre"></p>
                        <p class="text-danger font-weight-bold" style="font-size:small" id="Error-LocalidadNombre"></p>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="VaciarFormulario()" class="btn btn-danger" data-bs-dismiss="modal"><i class="fa-solid fa-xmark"></i>  Cerrar</button>
                <button type="button" onclick="GuardarLocalidad()" class="btn btn-success"><i class="fa-regular fa-bookmark"></i> Guardar</button>
            </div>
        </div>
    </div>
</div>

@*//Funcion para Completar la Tabla de Localidades*@
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
@section Scripts {

    <script src="~/js/Localidad-1.0.js"></script>
    <script>
        window.onload = CompletarTablaLocalidades();
    </script>
}