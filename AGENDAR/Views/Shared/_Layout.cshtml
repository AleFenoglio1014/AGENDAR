<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AGENDAR</title>
@*<link rel="stylesheet" href="~/css/site.css" />*@
@*<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />*@
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://fontawesome.com/icons"/>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
<link href="~/css/estilosPropios.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="bg-img" style="height:937px">
            <div class="overlay"></div>
        </div>

    <nav class="navbar navbar-expand-md navbar-dark ownbg">
        <a class="navbar-brand text-white pl-5" href="#"><img src="~/lib/Imagenes/AgendArLogo.jpg"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <partial name="_LoginPartial" />
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav ml-auto">
                @if (User.IsInRole("SuperUsuario"))
                {
                    <li class="nav-item">
                        <a class="nav-link ocultar767 ocultar820" asp-area="" asp-controller="Provincias" asp-action="Index">PROVINCIAS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link ocultar767 ocultar820" asp-area="" asp-controller="Localidades" asp-action="Index">LOCALIDADES</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Empresas" asp-action="Index">EMPRESAS</a>
                    </li>

                }

                @if (User.IsInRole("AdministradorEmpresa"))
                {
                    <li class="nav-item">
                        <a class="nav-link ocultar767" asp-area="" asp-controller="Empresas" asp-action="Create">EMPRESA</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link ocultar820" asp-controller="Profesionales" asp-action="Index">PROFESIONALES</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Horarios" asp-action="Index">HORARIOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Turnos" asp-action="Index">TURNOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"><i class="bi bi-x-circle-fill cerrarSesion"></i></a>
                    </li>
                }
            </ul>
        </div>
    </nav>
    </header>

    <div class="container body-content mt-5">

        @RenderBody()

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap-3/bootstrap.min.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    @*<script src="~/js/site.js" asp-append-version="true"></script>*@
    <script src="~/js/Sweetalert.js" asp-append-version="true"></script>
    <script src="~/js/LayoutEstilos.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
