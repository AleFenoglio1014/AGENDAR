<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AGENDAR</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/estilosPropios.css" />

</head>
<body>
    <header>
        <div class="bg-img">
            <div class="overlay"></div>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  colorNav box-shadow mb-3 ">
            <div class="container">
                <div class="navbar-header">
                    <!-- Logo -->
                    <div class="navbar-brand">
                        <a>
                            <img class="logo" src="~/lib/Imagenes/AgendArLogo.jpg" alt="logo">
                        </a>
                    </div>
                    <!-- /Logo -->
                    <!-- Collapse nav button -->
                    <div class="nav-collapse">
                        <span></span>
                    </div>
                    <!-- /Collapse nav button -->
                </div>

                <partial name="_LoginPartial" />

                <ul class="main-nav nav navbar-nav navbar-right">

                    <li><a asp-area="" asp-controller="Empresas" asp-action="Index">EMPRESAS</a></li>
                    <li><a asp-area="" asp-controller="Profesionales" asp-action="Index">PROFESIONALES</a></li>
                    <li><a asp-area="" asp-controller="Horarios" asp-action="Index">HORARIOS</a></li>
                    <li><a asp-area="" asp-controller="Turnos" asp-action="Index">TURNOS</a></li>
                </ul>
                <div class="nav-item">

                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button class="main-btn">Cerrar Sesión</button>
                    </form>

                </div>
            </div>
        </nav>
    </header>

    <div class="container body-content mt-5">

        @RenderBody()

    </div>

    <!-- Back to top -->
    <div id="back-to-top"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Sweetalert.js" asp-append-version="true"></script>
    <script src="~/js/LayoutEstilos.js"></script>



    @RenderSection("Scripts", required: false)
</body>
</html>
