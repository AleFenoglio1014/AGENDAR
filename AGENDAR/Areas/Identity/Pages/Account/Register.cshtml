@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}
@{
    Layout = "~/Views/Shared/Layout-Login.cshtml";
}


    <div class="row justify-content-center">
        <div class="col-md-12 col-lg-10">
            <div class="wrap d-md-flex">
                <div class="img">
                    <img src="~/lib/Imagenes/logoLogin1.jpg" width="100%" height="100%" alt="" />
                </div>
                <div class="login-wrap p-4 p-md-5">
                    <div class="d-flex">
                        <div class="w-100">
                            <h3 class="text-md-center font-weight-bold">REGISTRARSE</h3>
                        </div>
                        
                    </div>
                    <form id="account" method="post" class="signin-form">
@*                        <div asp-validation-summary="All" class="text-danger"></div>
*@                        <div class="form-group mb-3">
                            <label class="label" for="name">Correo Electronico</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="off"
                                   placeholder="Introduce un correo electrónico." required>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="label" for="name">Contraseña</label>
                            <input asp-for="Input.Password" class="form-control" placeholder="Introduce una contraseña." />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="label" for="name">Confirmar contraseña</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Introduce una contraseña." />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary rounded submit px-3">REGISTRAR EMPRESA</button>
                        </div>
                        <div class="form-group">
                            <a class="form-control btn btn-primary rounded submit" asp-page="/Account/Login">
                                VOLVER
                            </a>

                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>


    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <link href="~/css/VistaLogin.css" rel="stylesheet" />
