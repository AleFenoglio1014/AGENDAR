<div class="limiter" id="login">
    <div class="container-login" style=" background-color: lightslategray; outline: groove">


        <div class="row">
            <div class="col-lg-6 formulario">
                <div class="login_topimg">
                    <img src="~/lib/Imagenes/AGENDAR_LOGO_POSITIVO_01.png" />
                </div>
            </div>


            <div class="col-lg-6 col-md-offset-1 ">

                <div class="wrap-login100">
                    <form id="account" method="post">
                        <h3>Registrar Usuario</h3>

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" placeholder="Introduce un correo electrónico." />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" placeholder="Introduce una contraseña." />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Introduce una contraseña." />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        
                        <button type="submit" class="btn btn-outline-success">Registrar Usuario</button>
                        
       
                        <button type="submit" class="btn btn-outline-primary">Registrar Empresa</button>
                       
